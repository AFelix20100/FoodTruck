{% extends 'base-admin.html.twig' %}

{% block title %}FoodTruck by CCI | Administration {% endblock %}

{% block body %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Liste des clients</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered myTable" width="100%" cellspacing="0">
                    <thead class="text-center">
                        <tr>
                            <th>ID</th>
                            <th>MAIL</th>
                            <th>PSEUDO</th>
                            <th>REJOINT LE</th>
                            <th>DERNIÈRE MODIFICATION</th>
                            <th>ACTIONS</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        {% for client in clients %}
                        <tr>
                            <td>{{ client.id }}</td>
                            <td>{{ client.email }}</td>
                            <td>{{ client.pseudo }}</td>
                            <td>{{ client.dateCreation | date("d/m/Y") }}</td>
                            <td>{{ client.dateModification | date("d/m/Y") }}</td>
                            <td class="text-wrap">
                                <div class="d-flex justify-content-around">
                                    <form action="{{ path('app_admin_supprimer_utilisateur', {'type': 'client', 'id': client.id}) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
                                        <button type="submit" class="btn btn-danger">
                                            <i class="fas fa-trash-alt"></i> Supprimer
                                        </button>
                                    </form>
                                    
                                    <!-- Bouton de modification -->
                                    <a href="{{ path('app_home', {'id': client.id}) }}" class="btn btn-primary"><i class="fas fa-edit"></i> Modifier</a>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>
{% endblock %}

