{% extends 'base.html.twig' %}

{% block title %}FoodTruck index{% endblock %}

{% block body %}
    <h1>FoodTruck index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Img</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for food_truck in food_trucks %}
            <tr>
                <td>{{ food_truck.id }}</td>
                <td>{{ food_truck.nom }}</td>
                <td>{{ food_truck.description }}</td>
                <td>{{ food_truck.img }}</td>
                <td>
                    <a href="{{ path('app_food_truck_show', {'id': food_truck.id}) }}">show</a>
                    <a href="{{ path('app_food_truck_edit', {'id': food_truck.id}) }}">edit</a>
                </td>
            </tr>
